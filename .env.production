# Production Environment Variables Template
# Copy this to your deployment platform's environment configuration
# DO NOT commit actual values to git

# ================================
# Node Environment
# ================================
NODE_ENV=production
API_TIMEOUT=15000
LOG_LEVEL=error

# ================================
# Firebase Configuration (Production)
# ================================
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# ================================
# Supabase Configuration (Production)
# ================================
SUPABASE_URL=
SUPABASE_ANON_KEY=
# Service key should ONLY be in backend/serverless functions
# SUPABASE_SERVICE_KEY=

# ================================
# OpenAI Configuration
# ================================
OPENAI_API_KEY=
OPENAI_ORG_ID=

# ================================
# Stripe Configuration (Production)
# ================================
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Price IDs
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_PRO_YEARLY=
STRIPE_PRICE_MECHANIC_MONTHLY=
STRIPE_PRICE_MECHANIC_YEARLY=
STRIPE_PRICE_DEALER_MONTHLY=

# ================================
# Analytics & Monitoring
# ================================
# Sentry
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Mixpanel
MIXPANEL_TOKEN=

# Google Analytics
GA_MEASUREMENT_ID=

# ================================
# External APIs
# ================================
# NHTSA (No key required - free API)
NHTSA_API_URL=https://vpic.nhtsa.dot.gov/api/

# CarMD (Phase 2)
CARMD_PARTNER_TOKEN=
CARMD_AUTH_TOKEN=

# MarketCheck (Phase 3)
MARKETCHECK_API_KEY=

# ================================
# Feature Flags
# ================================
ENABLE_AI_CHAT=false
ENABLE_RAG=false
ENABLE_OBD_DIAGNOSTICS=false
ENABLE_SUBSCRIPTIONS=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# ================================
# Security
# ================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ================================
# App Configuration
# ================================
APP_URL=https://yourdomain.com
API_BASE_URL=https://api.yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
